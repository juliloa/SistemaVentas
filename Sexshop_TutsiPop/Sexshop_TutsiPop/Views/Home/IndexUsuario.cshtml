@model IEnumerable<Sexshop_TutsiPop.Models.productosInfo>

@{
    ViewData["Title"] = "Home Page";
    Layout = null; // Usamos una vista sin layout
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TutsiPop</title>

    <!-- Fuentes y Estilos -->
    <link href="https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
    <link rel="stylesheet" href="~/css/StyleIndex.css" />

    <style>
        /* Estilos de la barra de navegación */
        .navbar {
            background-color: #d97878; /* Color de fondo */
            padding: 10px;
        }

        .navbar-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        /* Estilos del contenedor de productos */
        .productos-container {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            margin-top: 20px;
        }

        /* Estilos de cada tarjeta de producto */
        .producto-card {
            border: 1px solid #ccc;
            padding: 10px;
            width: 200px;
            text-align: center;
        }

        .producto-imagen {
            max-width: 100%;
            height: auto;
        }

        .producto-detalles {
            margin-top: 10px;
            font-size: 14px;
        }
    </style>
</head>
<body>
    <!-- Barra de Navegación -->
    <nav class="navbar">
        <div class="navbar-container">
            <a href="#" class="navbar-logo">TutsiPop</a>
            <div class="navbar-links">
                @if (User.Identity.IsAuthenticated)
                {
                    <a class="navbar-login" asp-area="" asp-controller="Inicio" asp-action="Logout">
                        <i class='bx bx-log-out-circle'></i>
                        <span>Cerrar Sesión</span>
                    </a>
                }
                else
                {
                    <a class="navbar-login" asp-area="" asp-controller="Inicio" asp-action="Login">
                        <i class='bx bxs-user-circle'></i>
                        <span>Iniciar Sesión</span>
                    </a>
                    <a class="navbar-login" asp-area="" asp-controller="Inicio" asp-action="Registrar">
                        <i class='bx bxs-user-plus'></i>
                        <span>Registrarse</span>
                    </a>
                }
            </div>
        </div>
    </nav>
    <!-- Slider main container (fuera del navbar) -->
    <div class="swiper swiper-hero">
        <!-- Additional required wrapper -->
        <div class="swiper-wrapper">
            <!-- Slides -->
            <div class="swiper-slide"><img src="~/images/close-up-sex-toys (2).jpg" /></div>
            <div class="swiper-slide"><img src="~/images/close-up-sex-toys.jpg" /></div>
            <div class="swiper-slide"><img src="~/images/freepik__upload__51895.jpeg" /></div>
            <div class="swiper-slide"><img src="~/images/freepik__upload__3037.jpeg" /></div>
        </div>

        <!-- If we need pagination -->
        <div class="swiper-pagination"></div>

        <!-- If we need navigation buttons -->
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>
    </div>
@*     <!-- Contenedor de Productos -->
    <div class="productos-container">
        @if (Model != null && Model.Count > 0)
        {
            @foreach (var producto in Model)
            {
                <div class="producto-card">
                    <!-- Imagen del producto -->
                    <img src="@producto.imagen_url" alt="@producto.nombre_producto" class="producto-imagen" />
                    <div class="producto-detalles">
                        <h3>@producto.nombre_producto</h3>
                        <p>Categoría: @producto.categoria</p>
                        <p>Proveedor: @producto.proveedor</p>
                        <p>Precio: $@producto.precio</p>
                        <p>Unidades en stock: @producto.unidades_stock</p>
                    </div>
                </div>
            }
        }
        else
        {
            <p>No hay productos disponibles.</p>
        }
    </div> *@

    <!-- Scripts de Swiper -->
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script>
        const swiper = new Swiper('.swiper-hero', {
            direction: 'horizontal',
            loop: true,
            allowTouchMove: true,
            effect: "fade",
            autoplay: {
                delay: 5000,
                pauseOnMouseEnter: true,
                disableOnInteraction: false,
            },
            pagination: {
                el: '.swiper-pagination',
                clickable: true,
                dynamicBullets: true,
            },
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },
        });
    </script>
    <div class="productos-container">
        @if (Model != null && Model.Any())
        {
            @foreach (var producto in Model)
            {
                <div class="producto-card">
                    <!-- Imagen del producto -->
                    <img src="@producto.imagen_url" alt="@producto.nombre_producto" class="producto-imagen" />
                    <div class="producto-detalles">
                        <h3>@producto.nombre_producto</h3>
                        @* <p>Categoría: @producto.categoria</p>
                        <p>Proveedor: @producto.proveedor</p> *@
                        <p>Precio: $@producto.precio</p>
                        <p>Unidades en stock: @producto.unidades_stock</p>
                    </div>
                </div>
            }
        }
        else
        {
            <p>No hay productos disponibles.</p>
        }
    </div>
</body>
</html>
