@model Sexshop_TutsiPop.Models.entregasInfo

@{
    ViewData["Title"] = "Eliminar Entrega";
    Layout = null;  // Aquí puedes poner tu layout si es necesario
}

<head>
    <link rel="stylesheet" href="~/css/Styledetails.css" />
</head>

<h3>¿Está seguro de eliminar esta entrega?</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.id_entrega)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.id_entrega)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.id_pedido)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.id_pedido)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.direccion_entrega)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.direccion_entrega)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ciudad_entrega)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ciudad_entrega)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.barrio_entrega)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.barrio_entrega)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.nombre_empleado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.nombre_empleado)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.fecha_entrega)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.fecha_entrega)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.estado_entrega)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.estado_entrega)
        </dd>
    </dl>

    <!-- Formulario para eliminar -->
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="id_entrega" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Regresar</a>
    </form>
</div>
