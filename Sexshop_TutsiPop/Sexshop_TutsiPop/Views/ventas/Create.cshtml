@model Sexshop_TutsiPop.Models.ventas

@{
    ViewData["Title"] = "Create";
    Layout = null;
}
<head>
    <link rel="stylesheet" href="~/css/stylecreate.css" />

</head>
<h1>Agregar Nueva venta</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="cedula_cliente" class="control-label"></label>
                <input asp-for="cedula_cliente" class="form-control" />
                <span asp-validation-for="cedula_cliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cedula_empleado" class="control-label"></label>
                <input asp-for="cedula_empleado" class="form-control" />
                <span asp-validation-for="cedula_empleado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="fecha_venta" class="control-label"></label>
                <input asp-for="fecha_venta" class="form-control" />
                <span asp-validation-for="fecha_venta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="id_metodo_pago" class="control-label"></label>
                <input asp-for="id_metodo_pago" class="form-control" />
                <span asp-validation-for="id_metodo_pago" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
